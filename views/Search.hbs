{{#> layout }}
    <div class="row">
        <div class="col-md-8">
            <form>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Введите слово..." name="query" value="{{query}}">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Найти</button>
                    </span>
                </div>
            </form>

            <h4><small>Найдено {{result.length}}</small></h4>
            <div class="search-list">
                {{#result}}
                    <div class="search-list__item">
                        <div class="media">
                            {{#if image}}
                                <div class="media-left">
                                    <a href="{{link}}">
                                        <img class="media-object search-list__card" src="/{{image}}" />
                                    </a>
                                </div>
                            {{/if}}

                            <div class="media-body">
                                <h5 class="media-heading">
                                    <a href="{{link}}">{{{title}}}</a>
                                    <small>{{{rubric}}}</small>
                                </h5>

                                {{#if text}}
                                    {{{text}}}
                                {{/if}}

                                <div class="muted-text">
                                    <small>{{formattedDate}}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/result}}
            </div>
        </div>
    </div>
{{/layout}}